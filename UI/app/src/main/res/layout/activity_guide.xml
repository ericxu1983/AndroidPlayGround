<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ericxu.ui.GuideActivity">


    <LinearLayout
        android:id="@+id/button_group"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/guide_button_login"
            android:text="登    录"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/guide_button_register"
            android:text="免费注册"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/button_group"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layoutAnimation="@anim/anim_layout_show_typical_shops">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/guide_page1_logo_afu"
            android:id="@+id/afu"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/guide_page1_logo_luojisiwei"
            android:id="@+id/luojisiwei"
            android:layout_above="@id/afu"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/guide_page1_logo_durex"
            android:layout_below="@id/afu"
            android:layout_toRightOf="@id/afu"
            android:layout_toEndOf="@id/afu"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="13dp"
            android:id="@+id/gangben" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/guide_page1_logo_yunifang"
            android:id="@+id/xiangtuxiangqin"
            android:layout_below="@+id/nanrenwa"
            android:layout_marginTop="47dp"
            android:layout_marginRight="34dp"
            android:layout_toLeftOf="@+id/gangben"
            android:layout_toStartOf="@+id/gangben" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/guide_page1_logo_nanrenwa"
            android:id="@+id/nanrenwa"
            android:layout_alignBottom="@+id/huangyaoshi"
            android:layout_marginRight="31dp"
            android:layout_marginBottom="3dp"
            android:layout_toLeftOf="@id/afu"
            android:layout_toStartOf="@id/afu"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/guide_page1_logo_aikangguobin"
            android:id="@+id/aikang"
            android:layout_toLeftOf="@id/afu"
            android:layout_toStartOf="@id/afu"
            android:layout_marginBottom="36dp"
            android:layout_marginRight="32dp"
            android:layout_above="@+id/nanrenwa" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/guide_page1_logo_wis"
            android:id="@+id/wis"
            android:layout_above="@id/aikang"
            android:layout_marginBottom="32dp"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@id/afu"
            android:layout_toStartOf="@id/afu"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:layout_marginLeft="35dp"
            android:src="@drawable/guide_page1_logo_huangyaoshi"
            android:layout_above="@id/gangben"
            android:layout_toRightOf="@id/afu"
            android:layout_toEndOf="@id/afu"
            android:id="@+id/huangyaoshi" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/guide_page1_logo_weflower"
            android:layout_above="@id/huangyaoshi"
            android:layout_toRightOf="@id/afu"
            android:layout_toEndOf="@id/afu"
            android:id="@+id/weihuadian" />

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:layout_above="@+id/afu"
            android:layout_alignRight="@+id/huangyaoshi"
            android:layout_alignEnd="@+id/huangyaoshi" />


    </RelativeLayout>
</RelativeLayout>
